
#include<bits/stdc++.h>
using namespace std;

int main()
{
    long n,zero=0,one=0;
    cin>>n;
    vector<long>arr(n);
    for(long i=0;i<n;i++){
        cin>>arr[i];
        if(arr[i]==0) zero++;
        if(arr[i]==1) one++;
    }
    if(zero>=one){
        cout<<one*2<<endl;
    }
    else{
        cout<<zero*2<<endl;
    }

    return 0;
}
