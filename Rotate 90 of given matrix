
#include <iostream>
using namespace std;

int main()
{
int n;
cout<<"Enter size of matrix nxn : ";
cin>>n;
int arr[n][n];
cout<<"Enter element of matrix : "<<endl;
for(int i=0;i<n;i++){
    for(int j=0;j<n;j++){
        cin>>arr[i][j];
    }
}
cout<<"Input matrix : "<<endl;
for(int i=0;i<n;i++){
    for(int j=0;j<n;j++){
        cout<<arr[i][j]<<" ";
    }
    cout<<endl;
}
cout<<"Output Matrix : "<<endl;
for(int i=0;i<n;i++){
    for(int j=n-1;j>=0;j--){
        cout<<arr[j][i]<<" ";
    }
    cout<<endl;
}


    return 0;
}
